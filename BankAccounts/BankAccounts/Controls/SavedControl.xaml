<UserControl x:Class="BankAccounts.Controls.SavedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankAccounts.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Border Background="#56823d" CornerRadius="8">
        <StackPanel Orientation="Horizontal" Margin="3" HorizontalAlignment="Center">
            <Image Source="\Pictures\Check.png"/>
            <TextBlock Style="{StaticResource LabelLogin}" Text="Saved" VerticalAlignment="Center" FontSize="40" FontFamily="Bahnschrift SemiBold"/>


        </StackPanel>
    </Border>
</UserControl>
